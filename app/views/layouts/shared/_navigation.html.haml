%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.navbar_styled
  .container
    %a.navbar-brand{ href: root_path }
      = image_tag 'logo.png', class: 'navbrand-logo-image'
      = link_to "E-ADIUNKT", root_path, class: 'navbar-brand'
    #navbar.navbar-collapse.collapse
      %ul.navbar-nav.mr-auto
      %ul.nav.navbar-nav.ml-auto
        - if user_signed_in?
          %li.nav-item
            = link_to "Something", root_path, class: 'nav-link'
          .dropdown.show
            %a#dropdown-menu-link.btn.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
            .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdown-menu-link"}
              = link_to t('logout'), destroy_user_session_path, method: :delete, class: 'dropdown-item'
              = link_to t('navbar.edit_profile'), edit_user_registration_path, class: 'dropdown-item'
        - else
          %li.nav-item.btn_margin
            = link_to t('navbar.signin'), new_user_session_path, class: 'nav-link', class: 'btn btn-outline-light'
          %li.nav-item.btn_margin
            = link_to t('navbar.register'), new_user_registration_path, class: 'nav-link', class: 'btn btn-outline-light'
