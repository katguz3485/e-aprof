.row
  .col-md-12
    = simple_form_for @item, html: { multipart: true} do |f|
      = f.input  :type, as: :select
      = f.input :item_name
      = f.input :link
      = f.input :item_price
      = f.input  :currency_name
      = f.input  :catalogue_number
      = f.input  :provider_name
      = f.input  :number_of_items
      = f.input  :packaging
      = f.input  :remarks
      -#- if params[:type] == "Chemical"
      = f.input  :cid
      = f.input  :formula_url
      = f.input  :cas_number
      = f.input  :purity
      = f.button :submit, class: "btn btn-outline-success"
-#
-#f.select :type, [Item.name, SpecialItem.name]

