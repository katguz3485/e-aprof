<h1>Purchase Orders</h1>

<%= form_for_filterrific @filterrific do |f| %>
  <div class="search">
    Search
    <%= f.text_field(
            :search_name,
            class: 'filterrific-periodically-observed'
        ) %>
  </div>


  <div class="search">
    <%= link_to(
            'Reset filters',
            reset_filterrific_url, class: "btn btn-primary"
        ) %>
  </div>




<%= render(
        partial: 'purchase_orders/purchase_orders_table',
        locals: { purchase_orders: @purchase_orders }
    ) %>
<% end %>