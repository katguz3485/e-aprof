.row
  .col-md-8
    %table.table.table-condensed.center-content
      %thead
        %tr

          %th= t('name')
          %th= t('deadline')
          %th= t('grant')


        %tbody
          %tr
            - @purchase_orders.find_each do |purchase_order|
              %tr
                %td= purchase_order.name
                %td= purchase_order.planned_order_date
                %td= purchase_order.grant.grant_name




